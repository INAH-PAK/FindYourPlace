<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/notor"
        android:text="내주변"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_login_tv_go"
        android:clickable="true"
        android:padding="12dp"
        android:text="비회원 로그인"
        android:textSize="20dp"
        android:textStyle="italic" />

<!--    가장 아래쪽 뷰 부터 생성  -->
    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:background="@drawable/bg_round_rect"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        />

    <LinearLayout
        android:id="@+id/layout_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_sign_up"
        android:layout_alignStart="@id/tv_sign_up"
        android:layout_alignEnd="@id/tv_sign_up"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_email_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 로그인"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/layout_email_login"
        android:layout_alignStart="@id/tv_sign_up"
        android:layout_alignEnd="@id/tv_sign_up"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/btn_kakao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_login_kakao"
            android:clickable="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>


        <ImageView
            android:id="@+id/btn_google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_login_google"
            android:clickable="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>


        <ImageView
            android:id="@+id/btn_naver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_login_naver"
            android:clickable="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="간편하게 로그인"
        android:textSize="18dp"
        android:layout_above="@id/layout_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>


    </RelativeLayout>